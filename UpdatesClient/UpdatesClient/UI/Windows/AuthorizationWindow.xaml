        <Image HorizontalAlignment="Left" Height="40" Margin="305,194,0,0" VerticalAlignment="Top" Width="186" Source="/UpdatesClient;component/Assets/Images/Banners/bar.png"/>
        <Image HorizontalAlignment="Left" Height="40" Margin="746,194,0,0" VerticalAlignment="Top" Width="186" Source="/UpdatesClient;component/Assets/Images/Banners/bar.png"/>
        <Label Content="Добро пожаловать" x:Name="WelcomeLabel"  HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="496,176,0,0" VerticalAlignment="Top" Width="250" FontSize="24" Height="47" Foreground="White"/>
    </Grid>
</Window>
