        xmlns:local="clr-namespace:UpdatesClient.UI.Windows" xmlns:pages="clr-namespace:UpdatesClient.UI.Pages" xmlns:Controllers="clr-namespace:UpdatesClient.UI.Controllers"
        mc:Ignorable="d"
        ResizeMode="CanMinimize" WindowStyle="None" WindowStartupLocation="CenterScreen"
        Title="Окно авторизации" Height="732" Width="1217"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <Image HorizontalAlignment="Left" Height="732" VerticalAlignment="Top" Width="1207" Source="/UpdatesClient;component/Assets/Images/Backgrounds/Background1.png" Stretch="UniformToFill"/>
